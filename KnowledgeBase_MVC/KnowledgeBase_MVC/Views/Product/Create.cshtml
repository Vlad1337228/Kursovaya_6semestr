@{
    ViewData["Title"] = "Создание товара";
}

@model Product;

<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header">
                    <hi class="text-center text-primary">Создание информации о товаре</hi>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Create">
                        <div class="form-group m-2">
                            @*<label asp-for="NameCompany">Название компании</label>*@
                            <input type="text" asp-for="NameProduct" class="form-control" placeholder="Название продукта" />
                        </div>
                        <div class="form-group m-2">
                            @*<label asp-for="OccupationOfTheCompany"></label>*@
                            <input type="text" asp-for="EAN" class="form-control" placeholder="Код товара" />
                        </div>
                        <div class="form-group m-2">
                            @*<label asp-for="Location"> </label>*@
                            <input type="text" asp-for="Coast" class="form-control" placeholder="Стоимость" />
                        </div>

                        <div class="mt-3">
                            <input  type="button" value="Создать" class="btn btn-sm btn-outline-success float-end" />
                          </div>
                   </form>
                </div>
            </div>
        </div>
    </div>
 </div>