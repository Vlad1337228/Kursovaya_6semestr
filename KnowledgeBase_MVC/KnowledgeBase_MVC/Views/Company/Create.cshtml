@{
    ViewData["Title"] = "Создание компании";
}

@model Company;

<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header">
                    <hi class="text-center text-primary">Создание информации о компании</hi>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Create">
                        <div class="form-group m-2">
                            @*<label asp-for="NameCompany">Название компании</label>*@
                            <input type="text" asp-for="NameCompany" class="form-control" placeholder="Название компании" />
                        </div>
                        <div class="form-group m-2">
                            @*<label asp-for="OccupationOfTheCompany"></label>*@
                            <input type="text" asp-for="OccupationOfTheCompany" class="form-control" placeholder="Описание компании" />
                        </div>
                        <div class="form-group m-2">
                            @*<label asp-for="Location"> </label>*@
                            <input type="text" asp-for="Location" class="form-control" placeholder="Месторасположение" />
                        </div>

                        <div class="mt-3">
                            <input  type="button" value="Создать" class="btn btn-sm btn-outline-success float-end" />
                        </div>
                   </form>
                </div>
            </div>
        </div>
    </div>
 </div>